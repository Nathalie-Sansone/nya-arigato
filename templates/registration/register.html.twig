{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% block title %}{{ parent() }} - Création de compte{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal text-center mt-5">S'inscrire</h1>
        <div class="col-xl-6 col-xs-8 card mx-auto mt-5 mb-5">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                {{ form_start(registrationForm) }}
                <div class="container form-background">
                    <div class="mt-2 mb-4 d-inline-block">
                        <small>Déjà inscrit?
                            <a href="{{ path('app_login') }}" class="btn text-uppercase text-secondary">connexion</a>
                        </small>
                    </div>
                    {{ form_start(registrationForm) }}
                    {{ form_errors(registrationForm) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword) }}
                    <button type="submit" class="mt-3 mb-5 btn btn-outline-danger text-uppercase">Créer mon compte</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
{% endblock %}
