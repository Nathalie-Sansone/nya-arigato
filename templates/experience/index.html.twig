{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - All experiences{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">All experiences !</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for experience in experiences %}
            <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="{{ experience.image }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title text-muted">{{ experience.title }}</h5>
                    <p class="card-text">{{ experience.content|u.truncate(100, '...') }}</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Ville/quartier : {{ experience.city }}</li>
                        <li class="list-group-item">Cat√©gorie : {{ experience.category.name }}</li>
                    </ul>
                    <a href="#" class="btn btn-outline-danger">En savoir plus</a>
                </div>
            </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
