{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal text-center mt-5"><i class="fas fa-user-ninja"></i> Connexion</h1>
        <div class="col-xl-6 col-xs-8 card mx-auto mt-5 mb-5">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="container form-background">
    <label for="inputEmail" class="mt-4">Email</label>
    <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword" class="mt-4">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <a href="{{ path('app_register') }}" style="text-decoration: none"><h6 class="text-muted mt-4">Pas encore inscrit ? Cr√©er mon compte</h6></a>
    <div class="mt-4">
    <button class="btn btn-lg btn-outline-danger mb-4" type="submit">
        Se connecter
    </button>
    </div>
    </div>
</form>
        </div>
    </div>
{% endblock %}
