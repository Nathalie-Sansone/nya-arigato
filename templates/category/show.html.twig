{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }} - {{ category.name }}
{% endblock %}
{% block body %}
        <div class="container mt-5 justify-content-center align-items-center">
            <h1 class="text-center mb-5"> {% if category.name == 'Attractions' %}<i class="fab fa-angellist"></i>{% endif %}
                {% if category.name == 'Musées' %}<i class="fas fa-landmark"></i>{% endif %}
                {% if category.name == 'Observatoires' %}<i class="fas fa-broadcast-tower text-warning"></i>{% endif %}
                {% if category.name == 'Temples et sanctuaires' %}<i class="fas fa-torii-gate text-danger"></i>{% endif %}
                {% if category.name == 'Randonnées et excursions' %}<i class="fas fa-hiking text-info"></i>{% endif %}
                {% if category.name == 'Jardins et parcs' %}<i class="fas fa-leaf text-success"></i>{% endif %}
                {{ category.name }}</h1>
            <div class="row">
                {% for experience in experiences %}
                    <div class="col d-flex justify-content-center">
                        <div class="card mt-2" style="width: 18rem;">
                            <img src="{{ experience.image }}" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title text-muted">{{ experience.title }}</h5>
                                <p class="card-text">{{ experience.content|u.truncate(100, '...') }}</p>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><i class="fas fa-map-marker-alt text-danger"></i> {{ experience.city }}</li>
                                </ul>
                                <a href="{{ path('experience_show', {id: experience.id}) }}" class="btn btn-outline-danger">En savoir plus</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    Aucune expérience trouvée
                {% endfor %}
            </div>
        </div>
    {% endblock %}
