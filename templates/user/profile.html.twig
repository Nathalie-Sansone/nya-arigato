{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}
    {{ parent() }} - Mon profil
{% endblock %}
{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-6 justify-content-center">
    <h1 class="text-center mb-5"><i class="fas fa-user-ninja"></i> Mon profil</h1>
    {% if user.avatar %}
        <img src="/uploads/{{ user.avatar.image }}" alt="image profil" width="350px">
    {% else %}
        <img src="{{ asset('build/default-profile.png') }}" class="mx-auto">
    {% endif %}
    <h2 class="text-center mt-3">Modifier mon avatar :</h2>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type='submit' value='Ajouter ma photo' class="btn btn-outline-dark mt-4">
            {{ form_end(form) }}
</div>
    </div>
</div>
{% endblock %}
